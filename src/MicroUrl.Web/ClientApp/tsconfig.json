{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
